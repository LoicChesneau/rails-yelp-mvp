<h1>Reviews#new</h1>
<p>Find me in app/views/reviews/new.html.erb</p>


<%= @restaurant.name %>

<%= simple_form_for [@restaurant, @review] do |f| %>

  <%= f.error_notification message: 'Something went wrong' %>

  <%= f.input :content %>
  <%= f.input :rating, as: :select, collection: [0, 1, 2, 3, 4, 5] %>

  <%= f.button :submit %>

<% end %>



